<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <extension point="org.eclipse.core.runtime.applications" id="application">
      <application>
         <run class="de.slothsoft.mp4spliterator.Application"> </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.slothsoft.mp4spliterator.init.PreferenceInitializer">
      </initializer>
   </extension>

   <extension point="org.eclipse.core.runtime.products" id="product">
      <product name="MP4 Spliterator" application="de.slothsoft.mp4spliterator.application">
         <property name="appName" value="MP4 Spliterator"> </property>
         <property
               name="windowImages"
               value="logos/logo16.png,logos/logo32.png,logos/logo48.png,logos/logo64.png,logos/logo128.png,logos/logo256.png">
         </property>
         <property
               name="aboutImage"
               value="icons/about.png">
         </property>
         <property
               name="aboutText"
               value="%about">
         </property>
      </product>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.slothsoft.mp4spliterator.videos.ExportSplitHandler"
            id="de.slothsoft.mp4spliterator.exportSplit"
            name="%command.exportSplit">
      </command>
      <command
            id="de.slothsoft.mp4spliterator.refresh"
            name="%command.refresh">
      </command>
      <command
            defaultHandler="de.slothsoft.mp4spliterator.videos.OpenVideoFolderViewHandler"
            id="de.slothsoft.mp4spliterator.openVideoFolderView"
            name="%command.openVideoFolderView">
      </command>
      <command
            defaultHandler="de.slothsoft.mp4spliterator.videos.OpenVideoHandler"
            id="de.slothsoft.mp4spliterator.openVideo"
            name="%command.openVideo">
      </command>
      <command
            id="de.slothsoft.mp4spliterator.openVideoFromView"
            name="%command.openVideo">
      </command>
      <command
            defaultHandler="de.slothsoft.mp4spliterator.about.AboutHandler"
            id="de.slothsoft.mp4spliterator.about"
            name="%command.about">
      </command>
      <command
            defaultHandler="de.slothsoft.mp4spliterator.help.HelpHandler"
            id="de.slothsoft.mp4spliterator.help"
            name="%command.help">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="de.slothsoft.mp4spliterator.exportSplit"
            icon="icons/export-split.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.refresh"
            icon="icons/refresh.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.openVideoFolderView"
            icon="icons/video-folder.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.openVideo"
            icon="icons/file_video.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.openVideoFromView"
            icon="icons/file_video.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.help"
            icon="icons/help.png">
      </image>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.slothsoft.mp4spliterator.videos.VideoEditor"
            default="false"
            icon="icons/file_video.png"
            id="de.slothsoft.mp4spliterator.VideoEditor"
            name="%editor.videoEditor">
      </editor>
      <editor
            class="de.slothsoft.mp4spliterator.help.HelpEditor"
            default="false"
            icon="icons/help.png"
            id="de.slothsoft.mp4spliterator.HelpEditor"
            name="%editor.helpEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.slothsoft.mp4spliterator.common.RefreshHandler"
            commandId="de.slothsoft.mp4spliterator.refresh">
         <activeWhen>
            <with
                  variable="activePart">
               <instanceof
                     value="de.slothsoft.mp4spliterator.common.Refreshable">
               </instanceof>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="de.slothsoft.mp4spliterator.videos.OpenVideoFromViewHandler"
            commandId="de.slothsoft.mp4spliterator.openVideoFromView">
         <activeWhen>
            <and>
               <with
                     variable="activePart">
                  <instanceof
                        value="de.slothsoft.mp4spliterator.videos.VideoFolderView">
                  </instanceof>
               </with>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="java.io.File">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </activeWhen>
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="menu.file"
               label="%menu.file">
            <command
                  commandId="de.slothsoft.mp4spliterator.openVideo"
                  style="push">
            </command>
            <separator
                  name="de.slothsoft.mp4spliterator.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
         <menu
               id="menu.window"
               label="%menu.window">
            <command
                  commandId="de.slothsoft.mp4spliterator.openVideoFolderView"
                  style="push">
            </command>
            <separator
                  name="de.slothsoft.mp4spliterator.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  style="push">
            </command>
         </menu>
         <menu
               id="menu.help"
               label="%menu.help">
            <command
                  commandId="de.slothsoft.mp4spliterator.help"
                  style="push">
            </command>
            <separator
                  name="de.slothsoft.mp4spliterator.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="de.slothsoft.mp4spliterator.about"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.slothsoft.mp4spliterator.chapterSection">
         <command
               commandId="de.slothsoft.mp4spliterator.exportSplit"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.slothsoft.mp4spliterator.VideoFolderView">
         <command
               commandId="de.slothsoft.mp4spliterator.openVideoFromView"
               style="push">
         </command>
         <separator
               name="de.slothsoft.mp4spliterator.separator2"
               visible="true">
         </separator>
         <command
               commandId="de.slothsoft.mp4spliterator.refresh"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.slothsoft.mp4spliterator.Perspective"
            id="de.slothsoft.mp4spliterator.Perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.slothsoft.mp4spliterator.videos.GeneralPreferencePage"
            id="de.slothsoft.mp4spliterator.videos.GeneralPreferencePage"
            name="%preferencePage.general">
      </page>
      <page
            class="de.slothsoft.mp4spliterator.impl.ffmpeg.FfmpegPreferencePage"
            id="de.slothsoft.mp4spliterator.impl.ffmpeg.FfmpegPreferencePage"
            name="%preferencePage.ffmpeg">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.slothsoft.mp4spliterator.init.EarlyStartup">
      </startup>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <view
            class="de.slothsoft.mp4spliterator.videos.VideoFolderView"
            icon="icons/video-folder.png"
            id="de.slothsoft.mp4spliterator.VideoFolderView"
            inject="true"
            name="%view.videoFolder">
      </view>
   </extension>

</plugin>
