<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <extension point="org.eclipse.core.runtime.applications" id="application">
      <application>
         <run class="de.slothsoft.mp4spliterator.Application"> </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.slothsoft.mp4spliterator.internal.PreferenceInitializer">
      </initializer>
   </extension>

   <extension point="org.eclipse.core.runtime.products" id="product">
      <product name="Mp4Spliterator Application" application="de.slothsoft.mp4spliterator.application">
         <property name="appName" value="Mp4Spliterator Application"> </property>
      </product>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.slothsoft.mp4spliterator.videos.ExportSplitHandler"
            id="de.slothsoft.mp4spliterator.exportSplit"
            name="%command.exportSplit">
      </command>
      <command
            id="de.slothsoft.mp4spliterator.refresh"
            name="%command.refresh">
      </command>
      <command
            defaultHandler="de.slothsoft.mp4spliterator.videos.OpenVideoFolderViewHandler"
            id="de.slothsoft.mp4spliterator.openVideoFolderView"
            name="%command.openVideoFolderView">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="de.slothsoft.mp4spliterator.exportSplit"
            icon="icons/export-split.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.refresh"
            icon="icons/refresh.png">
      </image>
      <image
            commandId="de.slothsoft.mp4spliterator.openVideoFolderView"
            icon="icons/video-folder.png">
      </image>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.slothsoft.mp4spliterator.videos.VideoEditor"
            default="false"
            icon="icons/file_video.png"
            id="de.slothsoft.mp4spliterator.VideoEditor"
            name="%editor.videoEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.slothsoft.mp4spliterator.common.RefreshHandler"
            commandId="de.slothsoft.mp4spliterator.refresh">
         <activeWhen>
            <with
                  variable="activePart">
               <instanceof
                     value="de.slothsoft.mp4spliterator.common.Refreshable">
               </instanceof>
            </with>
         </activeWhen>
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="menu.file"
               label="%menu.file">
            <separator
                  name="de.slothsoft.mp4spliterator.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
         <menu
               id="menu.window"
               label="%menu.window">
            <command
                  commandId="de.slothsoft.mp4spliterator.openVideoFolderView"
                  style="push">
            </command>
            <separator
                  name="de.slothsoft.mp4spliterator.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  style="push">
            </command>
         </menu>
         <menu
               id="menu.help"
               label="%menu.help">
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.slothsoft.mp4spliterator.chapterSection">
         <command
               commandId="de.slothsoft.mp4spliterator.exportSplit"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.slothsoft.mp4spliterator.VideoFolderView">
         <command
               commandId="de.slothsoft.mp4spliterator.refresh"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.slothsoft.mp4spliterator.Perspective"
            id="de.slothsoft.mp4spliterator.Perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.slothsoft.mp4spliterator.videos.GeneralPreferencePage"
            id="de.slothsoft.mp4spliterator.videos.GeneralPreferencePage"
            name="%preferencePage.general">
      </page>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <view
            class="de.slothsoft.mp4spliterator.videos.VideoFolderView"
            icon="icons/video-folder.png"
            id="de.slothsoft.mp4spliterator.VideoFolderView"
            inject="true"
            name="%view.videoFolder">
      </view>
   </extension>

</plugin>
